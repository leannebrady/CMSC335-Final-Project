<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOOM</title>
</head>
<style>
    html {
        text-align: center;
        background: linear-gradient(to bottom, rgb(212, 182, 255), rgb(173, 230, 204));
        background-repeat: no-repeat;
        min-height: 100vh;
    }
    body {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }    
    h1, h2 {
        color: white;
        text-shadow: 2px 2px 4px lightblue;
    }
    img {
        margin: 2em;
        width: 50em;
    }
</style>
<body>
    <h1>Tasks</h1>
    <img src="/images/download.jpeg" alt="hypnosis">
    <br>
    <audio controls id="audioPlayer"></audio>

  <script>
    
    const audioPlayer = document.getElementById('audioPlayer');
    const endpointUrl = '/tasks/audio';

    // Fetch the audio stream from the API endpoint
    fetch(endpointUrl)
      .then(response => response.blob())
      .then(blob => {
        // Create a Blob URL for the audio stream
        const audioUrl = URL.createObjectURL(blob);

        // Set the audio source and play it
        audioPlayer.src = audioUrl;
        audioPlayer.play();
      })
      .catch(error => {
        console.error('Error fetching audio stream:', error);
      });
      
  </script>
</body>
</html>
